{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@api/*": ["../../packages/api/*"],
      "@api/trpc/*": ["../../packages/api/trpc/*"],
      "@repo/forms/*": ["components/forms/*"]
    },
    "baseUrl": "./",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
